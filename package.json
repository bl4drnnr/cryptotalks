{
  "name": "cryptotalks",
  "version": "0.0.1",
  "description": "Forum for cryptogeeks",
  "scripts": {
    "dev:build": "docker-compose --env-file .env.development up --build",
    "dev:up": "docker-compose --env-file .env.development up",
    "prod:build": "docker-compose --env-file .env.production up --build",
    "prod:up": "docker-compose --env-file .env.production up",
    "front:dev": "npm run dev --workspace=front",
    "down:dev": "docker-compose --env-file .env.development down",
    "rmi": "docker rmi cryptotalks-api cryptotalks-db cryptotalks-crypto-rates cryptotalks-auth cryptotalks-front"
  },
  "workspaces": [
    "./services/*"
  ],
  "keywords": [
    "cryptocurrency",
    "crypto",
    "bitcoin",
    "forum",
    "blog"
  ],
  "author": "Mikhail Bahdashych <contact@mikhailbahdashych.me>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
