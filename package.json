{
  "name": "cryptotalks",
  "version": "0.0.1",
  "description": "Forum for cryptogeeks",
  "scripts": {
    "dev:build": "docker-compose --env-file .env.development up --build",
    "dev:up": "docker-compose --env-file .env.development up",
    "prod:build": "docker-compose --env-file .env.production up --build",
    "prod:up": "docker-compose --env-file .env.production up",
    "front:dev": "npm run dev --workspace=front",
    "front:build": "npm run build --workspace=front",
    "api:dev": "npm run start:dev --workspace=api",
    "api:build": "npm run build --workspace=api",
    "auth:dev": "npm run start:dev --workspace=auth",
    "auth:build": "npm run build --workspace=auth",
    "crypto-rates:dev": "npm run start:dev --workspace=crypto-rates",
    "crypto-rates:build": "npm run build --workspace=crypto-rates",
    "down:dev": "docker-compose --env-file .env.development down",
    "down:prod": "docker-compose --env-file .env.production down",
    "rmi": "docker rmi cryptotalks-api cryptotalks-db cryptotalks-crypto-rates cryptotalks-auth cryptotalks-front",
    "format": "prettier --write services/{api,auth,crypto-rates}/**/*.ts && eslint services/{api,auth,crypto-rates}/**/*.ts --fix"
  },
  "workspaces": [
    "./services/*"
  ],
  "keywords": [
    "cryptocurrency",
    "crypto",
    "bitcoin",
    "forum",
    "blog"
  ],
  "author": "Mikhail Bahdashych <contact@mikhailbahdashych.me>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
